<div class="row">
  <div class="small-3 columns text-left">
    <img src="<%= @user.image_location %>" />
    <%= link_to 'Add Friend', add_friend_path(@user.username) %>
  </div>
  <div class="small-9 columns">
    <%= @user.name %><br>
    <i>"<%= @user.username %>"</i><br>
    <%= @user.city %>, <%= @user.state %>, <%= @user.country %><br>
    Born on <%= @user.birthday.strftime('%b %d, %Y') %><br>
    <%= Time.now.year.to_i - @user.birthday.strftime('%Y').to_i%> years old<br>
    <%= @user.gender %><br>
    <%= @user.friends.count %> <br>
    <%= link_to 'See all friends', '/' + @user.username + '/friends' %>
  </div>
</div>
<hr />
<div class="row">
  <table id="status-table">
    <% @statuses.each do |status| %>
    <tr>
      <td> <%= status.user.username%> says: <br> <%= status.status_update %></td>
    </tr>
    <% end %>
  </table>

</div>
